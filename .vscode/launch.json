        {
            "name": "Debug EasyTTY",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/easyTTY",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
